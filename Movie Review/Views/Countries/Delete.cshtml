@model Movie_Review.Models.Country

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.Name == "Admin_IvanMarchenko@gmail.com")
{
    <div style="margin:20px;">
        <h1 style="margin-top:20px">Deleting a country</h1>

        <h3>Are you sure you want to delete this country?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2" style="color:white;">
                    The name of the country
                </dt>
                <dd class="col-sm-10" style="color:white;">
                    @Html.DisplayFor(model => model.CountryName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" /> |
                <a style="text-decoration: none; color:#8D34FA;" class="underscores" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
}